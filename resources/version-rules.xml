<ruleset comparisonMethod="maven"
         xmlns="http://mojo.codehaus.org/versions-maven-plugin/rule/2.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://mojo.codehaus.org/versions-maven-plugin/rule/2.0.0 http://mojo.codehaus.org/versions-maven-plugin/xsd/rule-2.0.0.xsd">
  <rules>
    <rule groupId="*." comparisonMethod="maven">
        <ignoreVersions>
            <ignoreVersion type="regex">.*</ignoreVersion>
        </ignoreVersions>
    </rule>
    <rule groupId="com.axonivy.ivy.ci" artifactId="project-build-plugin" comparisonMethod="maven">
        <!-- only check project-build-plugin within given version -->
        <ignoreVersions>
          <ignoreVersion type="regex">^(?!{version}.*).*</ignoreVersion>
        </ignoreVersions>
    </rule>
  </rules>
</ruleset>